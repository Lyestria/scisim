<!--
  Four balls in a drum that, when using a spatialy-symmetry preserving impact operator, trace out a butterfly-like trajectory.
-->

<ball2d_scene>

  <global_render_settings num_ball_subdivs="256" num_drum_subdivs="256" num_aa_samples="8" background_color="0.098 0.098 0.098" hud_text_color="0.9 0.9 0.9"/>

  <camera cx="0" cy="0" scale_factor="4.8" fps="10" output_at_fps="0" render_at_fps="0" locked="0"/>
  <random_body_color rgb_float="0.988 0.105 0.588"/>
  <random_body_color rgb_float="0.996 0.890 0.204"/>
  <random_body_color rgb_float="0.192 0.780 0.988"/>

  <integrator type="verlet" dt="0.1"/>

  <impact_operator type="gr" CoR="1.0" v_tol="1.0e-9" cache_impulses="0">
    <solver name="ipopt" linear_solvers="ma97 ma57 mumps ma27 ma86" tol="1.0e-12"/>
  </impact_operator>

  <static_drum x="+0.0" y="+0.0" r="+4.0"/>
  <static_drum_renderer drum="0" r="0.1" color="0.824 0.824 0.824"/>

  <ball x="+0.0" y="+1.414213562373095145474621858738828450441360473632812500000000000000" vx="+0.0" vy="+1.0" m="1.0" r="1.0" fixed="0"/>
