<!--
  Test of the ability to kinematically script planes from Python.
-->

<ball2d_scene>

  <global_render_settings num_ball_subdivs="256" num_drum_subdivs="256" num_aa_samples="8" background_color="0.098 0.098 0.098" hud_text_color="0.9 0.9 0.9"/>

  <camera cx="0" cy="0" scale_factor="1.17639" fps="50" output_at_fps="1" render_at_fps="1" locked="0"/>
  <random_body_color rgb_float="0.988 0.105 0.588"/>
  <random_body_color rgb_float="0.996 0.890 0.204"/>
  <random_body_color rgb_float="0.192 0.780 0.988"/>

  <scripting callback="oscillating_box"/>

  <integrator type="verlet" dt="0.01"/>

  <sobogus_friction_solver mu="0.3" CoR="0.7" max_iters="5000" tol="1.0e-6" eval_every="20" staggering="geometric" cache_impulses="none"/>

  <gravity fx="0" fy="-9.81"/>

  <static_plane x="0 -1" n="0 1"/>
  <static_plane x="0 1" n="0 -1"/>
  <static_plane x="-1 0" n="1 0"/>
  <static_plane x="1 0" n="-1 0"/>

  <static_plane_renderer plane="0" r="0.05 2.0" color="0.824 0.824 0.824"/>
  <static_plane_renderer plane="1" r="0.05 2.0" color="0.824 0.824 0.824"/>
  <static_plane_renderer plane="2" r="0.05 2.0" color="0.824 0.824 0.824"/>
  <static_plane_renderer plane="3" r="0.05 2.0" color="0.824 0.824 0.824"/>

  <ball x="0" y="0" vx="0" vy="0" m="2.0" r="0.25" fixed="0"/>
  <ball x="0.5" y="0.5" vx="0" vy="0" m="5.0" r="0.1" fixed="0"/>
  <ball x="-0.25" y="-0.5" vx="0" vy="0" m="3.7" r="0.07" fixed="0"/>

</ball2d_scene>
