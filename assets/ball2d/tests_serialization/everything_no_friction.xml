<!--
  An example that attempts to use all Ball2D features, without friction. Intended for testing.
-->

<ball2d_scene>

  <global_render_settings num_ball_subdivs="256" num_drum_subdivs="256" num_aa_samples="8" background_color="0.098 0.098 0.098" hud_text_color="0.9 0.9 0.9"/>

  <camera cx="1" cy="0" scale_factor="10.8834" fps="50" output_at_fps="1" render_at_fps="1" locked="0"/>
  <random_body_color rgb_float="0.988 0.105 0.588"/>
  <random_body_color rgb_float="0.996 0.890 0.204"/>
  <random_body_color rgb_float="0.192 0.780 0.988"/>

  <integrator type="verlet" dt="0.01"/>

  <sobogus_friction_solver mu="0.0" CoR="0.7" max_iters="5000" tol="1.0e-12" eval_every="50" staggering="geometric" cache_impulses="none"/>

  <gravity fx="0.0" fy="-10.0"/>

  <!-- <static_plane x="0 -8" n="1 1"/> -->
  <static_drum x="0.0" y="0.0" r="10.0"/>
  <static_drum x="2.0" y="0.0" r="10.0"/>

  <!-- <static_plane x="0 8" n="0 -1"/> -->
  <!-- <static_plane x="0 -8" n="0 1"/> -->
  <!-- <planar_portal planeA="0" planeB="1"/> -->

  <static_drum_renderer drum="0" r="0.2" color="0.824 0.824 0.824"/>
  <static_drum_renderer drum="1" r="0.2" color="0.824 0.824 0.824"/>

  <ball x="-2.5" y="-2" vx="2" vy="2" m="1.37" r="0.8" fixed="0"/>
  <ball x="2.5" y="2" vx="-2" vy="-2" m="2.0" r="1.2" fixed="0"/>
  <ball x="3.7" y="-3" vx="5" vy="4.3" m="0.987" r="0.653" fixed="0"/>
  <ball x="-3.7" y="2.23" vx="-5.4" vy="-4.3" m="1.987" r="0.654" fixed="0"/>

</ball2d_scene>
